{% macro commonJsResources() %}
    {% javascripts
        '@FrontendBundle/Resources/public/js/vendor.js'
        '@FrontendBundle/Resources/assets/traits/*/*.js'
        '@FrontendBundle/Resources/assets/js/*.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <!--[if lt IE 9]>
    {% javascripts
        '@FrontendBundle/Resources/public/js/ie.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <![endif]-->
{% endmacro %}

{% macro commonCssResources() %}
    <link rel="stylesheet" href="{{ asset('bundles/frontend/css/vendor.css') }}" />
{% endmacro %}

{% macro spaJsResources() %}
    {% javascripts
        '@FrontendBundle/Resources/public/js/components.jade.js'
        '@FrontendBundle/Resources/assets/components/*/*.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endmacro %}
